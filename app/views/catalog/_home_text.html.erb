<div class='container'>
  <div class='jumbotron'>
    <div class='row justify-content-md-center'>
      <div class='col-md-auto search-block'>
        <%= content_tag :h2, t('geoblacklight.home.headline'), class: 'text-center font-weight-light h3' %>
        <div class='flex-nowrap'>
          <%= render_search_bar %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class='container'>
  <hr/>
  <h2 class='font-weight-light h3'>Explore</h2>
  <div class='row home-page-linked-searches'>
    <div class='col-sm-3 col-xs-6'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <%= link_to search_catalog_path(featured: 'geospatial_data', q: '') do %>
            <%= image_tag 'hackerman_maps.jpg', alt: 'Hackerman Maps (example)' %>
            <h3 class="h5">Hackerman Maps</h3>
          <% end %>
        </div>
      </div>
    </div>
    <div class='col-sm-3 col-xs-6'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <%= link_to search_catalog_path(featured: 'scanned_maps', q: '') do %>
            <%= image_tag 'maryland_lidar.png', alt: 'Maryland LiDAR (example)' %>
            <h3 class="h5">Maryland LiDAR</h3>
          <% end %>
        </div>
      </div>
    </div>
    <div class='col-sm-3 col-xs-6'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <%= link_to search_catalog_path(featured: 'census_data', q: '') do %>
            <%= image_tag 'fish_and_game_habitats.jpg', alt: 'Fish and Game Habitats (example)' %>
            <h3 class="h5">Fish and Game</h3>
          <% end %>
        </div>
      </div>
    </div>
    <div class='col-sm-3 col-xs-6'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <%= link_to search_catalog_path(featured: 'california_data', q: '') do %>
            <%= image_tag 'major_watershed_boundries.png', alt: 'Watersheds (example)' %>
            <h3 class="h5">Watersheds</h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <hr/>
  <div class='row'>
    <div class='col-12'>
      <h2 class='font-weight-light h3'>Search an area like Maryland or zoom out to explore</h2>
      <%= content_tag :div, '', id: 'map', data: { map: 'home', 'catalog-path'=> search_catalog_path , 'map-bbox' => '-79.48 37.88 -74.48 40.00', basemap: geoblacklight_basemap, leaflet_options: leaflet_options } %>
    </div>
  </div>
</div>
